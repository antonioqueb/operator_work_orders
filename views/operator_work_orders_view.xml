<odoo>
    <data>
        <!-- Vista de árbol de órdenes de trabajo solo accesible para el grupo Operador de Máquina -->
        <record id="view_workorder_tree_operator" model="ir.ui.view">
            <field name="name">workorder.tree.operator</field>
            <field name="model">mrp.workorder</field>
            <field name="arch" type="xml">
                <tree string="Órdenes de Trabajo" class="table table-striped table-bordered table-hover">
                    <field name="name" string="Nombre" class="text-primary font-weight-bold"/>
                    <field name="state" string="Estado" class="badge badge-info text-uppercase"/>
                    <field name="workcenter_id" string="Centro de Trabajo" class="text-success font-italic"/>
                    <field name="production_id" string="Producción" class="text-danger font-weight-bold"/>
                    <field name="duration_expected" string="Duración Estimada (min)" class="font-weight-bold"/>
                    <field name="duration" string="Duración" class="badge badge-warning font-italic"/>
                </tree>
            </field>
        </record>

        <!-- Vista Kanban de órdenes de trabajo con botones de acción estilizados -->
        <record id="view_workorder_kanban_operator" model="ir.ui.view">
            <field name="name">workorder.kanban.operator</field>
            <field name="model">mrp.workorder</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click card border-light mb-3">
                                <div class="card-header bg-primary text-white">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <span class="text-muted">Centro:</span> <strong class="text-success"><field name="workcenter_id"/></strong>
                                    </p>
                                    <p class="card-text">
                                        <span class="text-muted">Producción:</span> <strong class="text-danger"><field name="production_id"/></strong>
                                    </p>
                                    <div class="mb-2">
                                        <span class="badge badge-secondary text-uppercase">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <button type="object" name="button_start" class="btn btn-primary btn-sm">Iniciar Producción</button>
                                        <button type="object" name="button_pause" class="btn btn-danger btn-sm">Pausar/Detener Producción</button>
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted">Tiempo:</span>
                                        <span class="badge badge-warning">
                                            <field name="duration" widget="float_time"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción de ventana para mostrar las órdenes de trabajo -->
        <record id="action_work_orders_operator" model="ir.actions.act_window">
            <field name="name">Órdenes de Trabajo</field>
            <field name="res_model">mrp.workorder</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_workorder_tree_operator"/>
            <field name="context">{'search_default_ready_to_start': 1}</field>
            <field name="groups_id" eval="[(4, ref('operator_work_orders.group_machine_operator'))]"/>
        </record>

        <!-- Menú para acceder a las órdenes de trabajo en el menú root -->
        <menuitem id="menu_work_orders_operator_root"
                  name="Órdenes de Trabajo"
                  action="action_work_orders_operator"
                  groups="operator_work_orders.group_machine_operator"/>
    </data>
</odoo>
